{
  "name": "backend",
  "license": "UNLICENSED",
  "version": "0.1.0",
  "bin": {
    "api": "dist/bin/api.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "coverage": "jest --collect-coverage",
    "deployDev": "STAGE=Dev cdk deploy",
    "cdk": "cdk",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx,.gql,.graphql --ignore-path .gitignore --cache",
    "codegen": "graphql-codegen"
  },
  "devDependencies": {
    "@aws-cdk/assert": "^1.95.1",
    "@aws-cdk/aws-appsync": "^1.122.0",
    "@aws-cdk/aws-dynamodb": "^1.122.0",
    "@aws-cdk/core": "^1.95.1",
    "@graphql-codegen/cli": "^1.21.5",
    "@graphql-codegen/schema-ast": "^1.18.3",
    "@graphql-inspector/cli": "^2.6.1",
    "@graphql-tools/utils": "^7.10.0",
    "@babel/preset-typescript": "^7.15.0",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.8",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "aws-cdk": "^1.95.1",
    "cdk-lambda-nodejs-mock": "^1.0.4",
    "graphql-schema-linter": "^2.0.1",
    "esbuild": "^0.12.24",
    "esbuild-jest": "^0.5.0",
    "eslint": "^7.16.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-airbnb-typescript": "^14.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-graphql": "^4.0.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-prettier": "^4.0.0",
    "graphql": "^15.5.0",
    "jest": "^27.1.0",
    "prettier": "^2.0.4",
    "skyhook-graphql-sdk": "^1.23.126",
    "typescript": "~4.4.2"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/*/*.ts",
      "src/*/*/*.ts",
      "src/*/*/*/*.ts",
      "src/*/*/*/*/*.ts",
      "!src/bin/index.ts"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "transform": {
      "^.+\\.tsx?$": [
        "esbuild-jest",
        {
          "sourcemap": true
        }
      ]
    },
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "moduleNameMapper": {
      "@aws-cdk/aws-lambda-nodejs": "cdk-lambda-nodejs-mock"
    }
  },
  "babel": {
    "presets": [
      "@babel/preset-typescript"
    ]
  }
}
